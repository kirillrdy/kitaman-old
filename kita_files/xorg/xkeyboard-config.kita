KITA_TYPE="make"
FILES="http://xlibs.freedesktop.org/xkbdesc/xkeyboard-config-0.9.tar.bz2"
DEPEND="xorg-app XML-Parser"
BUILD=""
build_src()
{
XORG_PREFIX="/usr"
XORG_CONFIG="--prefix=$XORG_PREFIX --sysconfdir=/etc \
    --mandir=$XORG_PREFIX/share/man --localstatedir=/var"

./configure $XORG_CONFIG --with-xkb-base=$XORG_PREFIX/share/X11/xkb \
    --with-xkb-rules-symlink=xorg  &&
make
}
""
