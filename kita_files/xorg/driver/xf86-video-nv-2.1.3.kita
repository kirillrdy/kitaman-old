# xorg
FAKE=""
KITA_VER="1.0"
FILES="http://xorg.freedesktop.org/archive/X11R7.3/src/driver/xf86-video-nv-2.1.3.tar.bz2"
DEPEND="xorg-server"
BUILD=""
build_src()
{
XORG_PREFIX="/usr"
XORG_CONFIG="--prefix=$XORG_PREFIX --sysconfdir=/etc \
    --mandir=$XORG_PREFIX/share/man --localstatedir=/var"

./configure $XORG_CONFIG \
    --with-xorg-module-dir=$XORG_PREFIX/lib/X11/modules &&
make
}
""
