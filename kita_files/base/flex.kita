KITA_TYPE="make"
FILES="http://prdownloads.sourceforge.net/flex/flex-2.5.35.tar.bz2"
DEPEND=""
BUILD=""
config_src()
{
  rm /usr/bin/lex
  rm /usr/bin/flex
  ./configure --prefix=/usr
}
build_src()
{
  make
  make check
}
post_install(){
cat > $INSTALL_DIR/usr/bin/lex << "EOF"
#!/bin/sh
# Begin /usr/bin/lex

exec /usr/bin/flex -l "$@"

# End /usr/bin/lex
EOF
chmod -v 755 @INSTALL_DIR/usr/bin/lex
}
""
