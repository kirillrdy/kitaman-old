# Linux kernel
KITA_TYPE="make"
FILES="http://www.kernel.org/pub/linux/kernel/v2.6/linux-2.6.28.5.tar.bz2"
DEPEND=""
BUILD=""
build_src()
{
cp -rp . /usr/src/linux
cd /usr/src/linux

make defconfig
cp /usr/src/linux/.config /usr/src/linux/arch/x86/configs/i386_defconfig
make mrproper

colonel
make defconfig
#make menuconfig
make
make modules_install
}


kita_install(){
cd /usr/src/linux
mkdir -p $INSTALL_DIR/boot
cp -v arch/i386/boot/bzImage $INSTALL_DIR/boot/kernel
}
""
