# Linux kernel
KITA_TYPE="smart_make"
DEPEND=""
BUILD=""
ext_src(){
tar xpf $FILES -C /usr/src/
ln -s /usr/src/linux-2.6* /usr/src/linux
cd /usr/src/linux
}

build_src()
{
make mrproper
make menuconfig
make
make modules_install
}


kita_install(){
mkdir -p $INSTALL_DIR/boot
cp -v arch/i386/boot/bzImage $INSTALL_DIR/boot/kernel
cd $INSTALL_DIR
}
""
