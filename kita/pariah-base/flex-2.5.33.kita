FAKE=""
KITA_VER="1.0"
DESCRIPTION="sed"
FILES="http://prdownloads.sourceforge.net/flex/flex-2.5.33.tar.bz2"
DEPEND=""
BUILD=""
build_src(){
rm /usr/bin/lex
rm /usr/bin/flex
./configure --prefix=/usr
make
make check
}
post_install(){
cat > /usr/bin/lex << "EOF"
#!/bin/sh
# Begin /usr/bin/lex

exec /usr/bin/flex -l "$@"

# End /usr/bin/lex
EOF
chmod -v 755 /usr/bin/lex
}
""
